<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/add_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_host_hint" />

    <EditText
        android:id="@+id/add_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_port_hint" />

    <EditText
        android:id="@+id/add_webroot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_webroot_hint" />

    <EditText
        android:id="@+id/add_apikey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_apikey_hint" />

    <CheckBox
        android:id="@+id/add_usehttps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_use_https" />



</LinearLayout>