<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Widget.Sickdroid.Green.Actionbar" parent="Widget.Sherlock.Light.ActionBar" >
        <item name="android:background">@color/sickbeard_darker_green</item>
        <item name="android:titleTextStyle">@style/Widget.Sickdroid.Green.Actionbar.Text</item>
        <item name="android:icon">@drawable/ic_actionbar</item>
    </style>

    <style name="Widget.Sickdroid.Green.Actionbar.Text" parent="Widget.Sickdroid.Green.Actionbar" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- These are just placeholders in the scrollview for show details activity -->

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">@color/history_list_bg_odd</item>
    </style>

    <style name="Item.Bottom">
        <item name="android:background">@color/history_list_bg_even</item>
    </style>

    <style name="Item.Bottom.Alt">
        <item name="android:background">#FFFFFFFF</item>
    </style>


</resources>
