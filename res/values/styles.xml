<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Widget.Sickdroid.Green.Actionbar" parent="Widget.Sherlock.Light.ActionBar" >
        <item name="android:background">@drawable/actionbar_background_light_green</item>
    </style>


    <!-- These are just placeholders in the scrollview for show details activity -->

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">#FFFF0000</item>
    </style>

    <style name="Item.Bottom">
        <item name="android:background">#FF44DD22</item>
    </style>

    <style name="Item.Bottom.Alt">
        <item name="android:background">#FF0044FF</item>
    </style>


</resources>
